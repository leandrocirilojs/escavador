        <label>Data:</label>
        <input type="date" id="data" required><br><br>
        <label>Motorista:</label>
        <input type="text" id="motorista" required><br><br>
        <label>Valor Recebido:</label>
        <input type="number" id="valor-recebido" required><br><br>
        <label>Valor Pago:</label>
        <input type="number" id="valor-pago" required><br><br>
        <button id="btn-salvar">Salvar</button>
