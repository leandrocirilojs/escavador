    <script src="script.js"></script>


<script>

  


```
let saidas = [];

document.getElementById('btn-salvar').addEventListener('click', salvarSaida);

function salvarSaida(event) {
    event.preventDefault();

    const data = document.getElementById('data').value;
    const motorista = document.getElementById('motorista').value;
    const valorRecebido = parseFloat(document.getElementById('valor-recebido').value);
    const valorPago = parseFloat(document.getElementById('valor-pago').value);

    const saida = {
        data,
        motorista,
        valorRecebido,
        valorPago
    };

    saidas.push(saida);

    atualizarTabela();
}

function atualizarTabela() {
    const tabelaBody = document.getElementById('tabela-saidas-body');
    tabelaBody.innerHTML = '';

    saidas.forEach(saida => {
        const row = document.createElement('tr');
        row.innerHTML = `
            <td>${saida.data}</td>
            <td>${saida.motorista}</td>
            <td>R$ ${saida.valorRecebido.toFixed(2)}</td>
            <td>R$ ${saida.valorPago.toFixed(2)}</td>
        `;
        tabelaBody.appendChild(row);
    });
}

</script>
